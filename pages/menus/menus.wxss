.scroll-view-back{
  border-width: 2rpx 2rpx 2rpx 2rpx;  
  border-color: #aaa;  
  border-style: solid;  
}
.scroll-view{
  white-space: nowrap;
  height: 60rpx;
}
.scroll-view-item-normal{
  display: inline-block;
  line-height: 60rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.scroll-view-item-selected{
  display: inline-block;
  line-height: 60rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: red;
}
.menu-item{
  margin-top: 0px;
  padding: 0px;
  display: inline-block;
  width: 100%;
  height: 180px;
}
.menu-image{
  width: 50%;
  display: inline-block;
  height: 180px;
}
.menu-image image {
  width: 100%;
  height: 180px;
}
.menu-info {
  width: 50%;
  height: 180px;
  display: inline-block;
}
 .menu-info .name{
  display: block;
  margin-left: 10px;
  margin-top: 5px;
  text-align: center;
  height: 80px;
} 
 .menu-info .price{
  display: block;
  margin-left: 10px;
  text-align: center;
  height: 80px;
} 
 .menu-info .desc{
  display: block;
  margin-left: 10px;
  text-align: center;
  height: 20px;
} 